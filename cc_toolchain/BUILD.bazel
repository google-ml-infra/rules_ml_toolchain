        "@llvm_linux_x86_64//:distro_libs",
    ],
)

cc_toolchain(
    name = "toolchain_linux_x86_64_darwin_aarch64",
    all_files = ":all_linux_x86_64_darwin_aarch64",
    ar_files = ":ar_linux_x86_64_darwin_aarch64",
    compiler_files = ":compiler_linux_x86_64_darwin_aarch64",
