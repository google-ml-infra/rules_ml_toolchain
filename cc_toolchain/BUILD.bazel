    name = "all_linux_x86_64_darwin_aarch64",
    srcs = [
        ":imports_linux_x86_64_darwin_aarch64",
        "//cc_toolchain/wrappers:all",
        "//cc_toolchain/features:startup_libs_darwin_aarch64",
        "@llvm_linux_x86_64//:all",
    ],
)

# buildifier: leave-alone
filegroup(
    name = "compiler_linux_x86_64_darwin_aarch64",
    srcs = [
        ":all_linux_x86_64_darwin_aarch64",
        "//cc_toolchain/wrappers:all",
        "@llvm_linux_x86_64//:clang",
        "@llvm_linux_x86_64//:clang++",
        "@llvm_linux_x86_64//:distro_libs",
    ],
)

